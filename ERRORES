using namespace std;

int main() {

     float base, altura,area;
     cout <<"                    CALCULO DEL AREA DE UN TRIANGULO\n";
     cout <<"ingrese la altura \n";cin>>altura;
     
     cout <<"ingrese la base \n";cin>>base;
     cout <<"el area es \n";
     area = (base*altura)/2;

     cout<<area;
	 getch();
}

 
